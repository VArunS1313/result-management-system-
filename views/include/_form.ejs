<form action="/api/student" method="POST" id="add_student">
    <div class="new_student">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="name" required>
        </div>
        <div class="form-group">
            <label for="rollno" class="text-light">Roll no</label>
            
            <input type="number" name="rollno" value="" placeholder="0" required>
        </div>
        <div class="form-group">
            <label for="Dateofbirth" class="text-light">Date of birth</label>
            
            <input type="text" name="dateofbirth" value="" placeholder="DDMMYYYY" required>
        </div>
        <div class="form-group">
            <label for="Dateofbirth" class="text-light">Marks</label>
            
            <input type="number" name="marks" value="" placeholder="0" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
    

  
</form>